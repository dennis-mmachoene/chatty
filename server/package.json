{
  "name": "chatTY-platform-backend",
  "version": "1.0.0",
  "description": "Production-ready chat platform backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "node src/scripts/migrate.js",
    "db:seed": "node src/scripts/seed.js",
    "docker:build": "docker build -t chat-backend .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "chat",
    "realtime",
    "websocket",
    "express"
  ],
  "author": "Dennis Ramara",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "@sentry/node": "^10.25.0",
    "@supabase/supabase-js": "^2.81.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.9.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "socket.io-redis": "^5.4.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}